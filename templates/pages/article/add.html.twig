{% extends "base.html.twig" %}

{% block title %}
	Ajouter article!
{% endblock %}

{% block body %}
	<p>
		<a href="{{path('home')}}">home</a>/<a href="{{path('index_membre')}}">Espace membre</a>
	</p>
	<h1>Ajouter un article</h1>

	{{ form_start(formArticleAdd) }}
	{{ form_row(formArticleAdd.heading)}}
	{{ form_row(formArticleAdd.brand)}}
	{{ form_row(formArticleAdd.model)}}
	<br/>
	{{ form_row(formArticleAdd.serial)}}
	{{ form_row(formArticleAdd.year)}}
	{{ form_row(formArticleAdd.location)}}
	{{ form_row(formArticleAdd.color)}}
	<br/>
	{{ form_row(formArticleAdd.rentalType)}}
	{{ form_row(formArticleAdd.price)}}
	{{ form_row(formArticleAdd.currency)}}
	<br/>
	{{ form_row(formArticleAdd.description)}}

	<div>Options :</div>
	{% for checkbox in formArticleAdd.OptionList %}

		<div>
			<input type="checkbox" id="{{ checkbox.vars.id }}" name="{{ checkbox.vars.full_name }}" value="{{ checkbox.vars.name }}">
			<label for="{{ checkbox.vars.id }}">{{ checkbox.vars.label }}</label>
		</div>

		{% do formArticleAdd.OptionList.setRendered %}

	{% endfor %}

	<br/>
	{{ form_row(formArticleAdd.imageMain)}}
	<br/>

	<button class="btn btn-lg btn-primary" type="submit">
		Enregistrer
	</button>
	{{ form_end(formArticleAdd) }}

{% endblock %}
