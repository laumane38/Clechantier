{% extends "base.html.twig" %}

{% block title %}
	Edition de mon profil
{% endblock %}

{% block body %}

	<p>
		<a href="{{path('home')}}">home</a>/<a href="{{path('index_membre')}}">Espace membre</a>/<a href="{{path('profilModify')}}">Modifier mon profil</a>
	</p>
	<div class="clearfix">

		<div class="floatleft50">
			<h1>Edition de mon profil</h1>

			{{ form_start(formEditProfil) }}
			{{ form_row(formEditProfil.gender)}}
			{{ form_row(formEditProfil.firstName)}}
			{{ form_row(formEditProfil.lastName)}}
			{{ form_row(formEditProfil.email)}}
			{{ form_row(formEditProfil.companie)}}

			<button class="btn btn-lg btn-primary" type="submit">
				Modifier
			</button>
			{{ form_end(formEditProfil) }}

		</div>
		<div class="floatleft50">
			<h1>Mon avatar</h1>
			<div class="clearfix">

				<div class="avatar">
					<img src="../images/avatars/avatar{{avatar}}.png">
				</div>
				<div class="avatarModify">
					<a href="{{path('avatarEdit')}}" class="btn btn-primary">modifier</a>
				</div>

			</div>

		</div>

	</div>
{% endblock %}
