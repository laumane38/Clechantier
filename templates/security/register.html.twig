{% extends 'base.html.twig' %}

{% block title %}Espace membre
{% endblock %}

{% block javascripts %}{% endblock %}


{% block body %}

	<a href="/">home</a>

	<h1>Espace membre</h1>

	<div class="clearfix">
		<div class="formConnexion">
			<a class="btn btn-light" href="{{ path('app_login') }}" role="button">Déjà inscrit</a>
		</div>
		<div class=" formInscription">
			<h4>Créer un compte</h4>
			<p>Je m'inscris en remplissant le formulaire ci dessous</p>
			{{ form_start(formInscription) }}
			{{ form_row(formInscription.pseudo)}}
			<button id="lunettesI" class="unmask" type="button" title="unmask"><img src="/images/buttons/lunettes-mini.png"></button>
			{{ form_row(formInscription.password)}}
			{{ form_row(formInscription.email)}}
			<div>
				<label for="inscription_CGU" class="required">Accepter les conditions Générales d&#039;utilisation : *</label><input type="checkbox" id="inscription_CGU" name="inscription[CGU]" required="required" value="1"/></div>

			<div class="padding10">
				<button class="btn btn-lg btn-primary" type="submit">
					S'inscrire
				</button>
			</div>

			{{ form_end(formInscription) }}
		</div>
	</div>
	<p>
		<a class="btn btn-default" href="#" role="button">lire les conditions générales d'utilisation</a>
	</p>
	{% include 'compulsory.html.twig' %}
{% endblock %}
